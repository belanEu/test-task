{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./backend/build",
        "baseUrl": "./",
        "paths": {
            "cleverJS/*": ["node_modules/cleverJS/build/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "frontend"],
    "include": [
        "backend/**/*",
        "node_modules/cleverJS/**/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "target": "ESNext",
            "module": "CommonJS",
            "esModuleInterop": true,
            "resolveJsonModule": true,
            "moduleResolution": "node"
        }
    }
}